#:import dp kivy.metrics.dp

<DeckManagerScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10

        MDTopAppBar:
            id: app_bar
            title: '[デッキ管理]'

        MDBoxLayout:
            id: new_deck_row
            orientation: 'horizontal'
            spacing: 10
            size_hint_y: 0.1
            MDTextField:
                id: new_deck_input
                hint_text: '新しいデッキ名'
                size_hint_x: 0.7
            MDRaisedButton:
                text: 'デッキを作成'
                size_hint_x: 0.2
                md_bg_color: app.theme_cls.primary_color
                on_press: root.create_deck(self)
            MDIconButton:
                icon: 'refresh'
                on_press: root.refresh_deck_list()
                size_hint_x: 0.1

        MDScrollView:
            size_hint: 1, 0.6
            MDBoxLayout:
                id: deck_buttons_layout
                orientation: 'vertical'
                spacing: 5
                size_hint_y: None
                height: self.minimum_height

        MDBoxLayout:
            id: import_row
            orientation: 'horizontal'
            spacing: 10
            size_hint_y: 0.1
            MDTextField:
                id: import_path_input
                hint_text: 'CSVファイルのパスを入力'
                size_hint_x: 0.8
            MDRaisedButton:
                text: 'CSVからインポート'
                size_hint_x: 0.2
                md_bg_color: app.theme_cls.primary_color
                on_press: root.import_deck_from_csv(self)

        MDBoxLayout:
            id: bottom_row
            orientation: 'horizontal'
            spacing: 10
            size_hint_y: 0.1
            MDRaisedButton:
                text: '戻る'
                size_hint_x: 0.5
                md_bg_color: app.theme_cls.accent_color
                on_press: root.go_back(self)
            MDRaisedButton:
                text: '全てのカードを見る'
                size_hint_x: 0.5
                md_bg_color: app.theme_cls.primary_color
                on_press: root.show_all_cards(self)
