#:import dp kivy.metrics.dp
<CardEffectEditScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(10)
        padding: dp(10)

        MDLabel:
            id: title_label
            text: 'カード効果編集'
            halign: 'center'
            size_hint_y: None
            height: dp(40)

        MDScrollView:
            MDTextField:
                id: yaml_field
                text: ''
                multiline: True
                size_hint_y: None
                height: self.minimum_height
                mode: 'rectangle'

        MDTextField:
            id: file_path_input
            hint_text: 'ファイルパス'
            size_hint_y: None
            height: dp(40)

        BoxLayout:
            size_hint_y: None
            height: dp(48)
            spacing: dp(10)
            MDRaisedButton:
                text: '読込'
                on_release: root.reload_yaml()
            MDRaisedButton:
                text: '保存'
                on_release: root.save_yaml()
            MDRaisedButton:
                text: 'インポート'
                on_release: root.import_yaml()
            MDRaisedButton:
                text: 'エクスポート'
                on_release: root.export_yaml()
            MDRaisedButton:
                text: '戻る'
                md_bg_color: app.theme_cls.accent_color
                on_release: app.root.current = 'card_detail'
