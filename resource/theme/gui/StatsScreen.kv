#:import dp kivy.metrics.dp
<StatsScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: dp(10)
        padding: dp(20)

        MDLabel:
            text: '[統計表示画面]'
            halign: 'center'

        MDBottomAppBar:
            MDToolbar:
                type: "bottom"
                left_action_items: [["arrow-left", lambda x: root.change_screen('menu')]]
